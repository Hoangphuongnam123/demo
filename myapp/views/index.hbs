<% } %> -->
  

  <table class="table">
<thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Name</th>
    <th scope="col">Email</th>
    <th width="200px">Action</th>
 
  </tr>
</thead>
<tbody>
  {{#each users}}
  <tr>
    <th scope="row">{{id}}</th>
    <td>{{ten}}</td>
    <td>{{email}}</td>
    <td>
    <a class="btn btn-success edit" href="/edit/{{id}}">Edit</a>                       
    <a class="btn btn-danger delete"  href="/delete/{{id}}">Delete</a>                       
   </td>
  </tr>
  {{/each}}
  
</tbody>
</table>
